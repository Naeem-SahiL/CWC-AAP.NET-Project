                        </div>
                        <div class="form-group col-6">
                            <label asp-for="first_team_runsscored" class="control-label"></label>
                            <input asp-for="first_team_runsscored" class="form-control" />
                            <span asp-validation-for="first_team_runsscored" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="first_team_ballsfaced" class="control-label"></label>
                            <input asp-for="first_team_ballsfaced" class="form-control" />
                            <span asp-validation-for="first_team_ballsfaced" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="first_team_sixers" class="control-label"></label>
                            <input asp-for="first_team_sixers" class="form-control" />
                            <span asp-validation-for="first_team_sixers" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="first_team_fours" class="control-label"></label>
                            <input asp-for="first_team_fours" class="form-control" />
                            <span asp-validation-for="first_team_fours" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="first_team_maidens" class="control-label"></label>
                            <input asp-for="first_team_maidens" class="form-control" />
                            <span asp-validation-for="first_team_maidens" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="first_team_totalout" class="control-label"></label>
                            <input asp-for="first_team_totalout" class="form-control" />
                            <span asp-validation-for="first_team_totalout" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="first_team_wktstaken" class="control-label"></label>
                            <input asp-for="first_team_wktstaken" class="form-control" />
                            <span asp-validation-for="first_team_wktstaken" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="first_team_ballsbowled" class="control-label"></label>
                            <input asp-for="first_team_ballsbowled" class="form-control" />
                            <span asp-validation-for="first_team_ballsbowled" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="second_team_runsscored" class="control-label"></label>
                            <input asp-for="second_team_runsscored" class="form-control" />
                            <span asp-validation-for="second_team_runsscored" class="text-danger"></span>
