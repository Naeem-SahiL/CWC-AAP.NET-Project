@model core.Models.ScorecardModel

@{
    ViewData["Title"] = "Insert Scorecard record";
    Layout = null;
}

<h3 class="text-center">@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="container">
        <form asp-action="Add" asp-route-id="@Model.sc_id" onsubmit="return ajaxPost(this);" autocomplete="off">
