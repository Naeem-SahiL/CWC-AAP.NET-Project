@model System.Data.DataTable

<div class="table-responsive-lg " style="height: 500px; overflow-y:auto;">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped  table-sm" style="height:100px;">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Team_1_scores
                        </th>
                        <th>
                            Team_1_balls_faced
                        </th>
                        <th>
                            Team_1_sixers
                        </th>
                        <th>
                            Team_1_fours
                        </th>
                        <th>
                            Team_1_maidens
                        </th>
                        <th>
                            Team_1_total_outs
                        </th>
                        <th>
                            Team_1_wicket_taken
                        </th>
                        <th>
                            Team_1_ball_bowled
                        </th>
                        <th>
                            Team 2 scores
                        </th>
                        <th>
                            Team 2 balls faced
                        </th>
                        <th>
                            Team 2 sixers
                        </th>
                        <th>
                            Team 2 fours
                        </th>
                        <th>
                            Team 2 maidens
                        </th>
                        <th>
                            Team 2 total outs
                        </th>
                        <th>
                            Team 2 wicket taken
                        </th>
                        <th>
                            Team 2 ball bowled
                        </th>


                        <th>
                            <a onclick="jQueryshowPopUp('@Url.Action("Add", "Scorecard",null,Context.Request.Scheme)', 'Insert Scorecard record')" class="btn btn-primary btn-sm text-light"><i class="fas fa-plus-circle p-1"></i>Create New</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Rows[i]["sc_id"]
                            </td>
                            <td>
                                @Model.Rows[i]["first_team_runsscored"]
                            </td>
                            <td>
                                @Model.Rows[i]["first_team_ballsfaced"]
                            </td>
                            <td>
                                @Model.Rows[i]["first_team_sixers"]
                            </td>
                            <td>
                                @Model.Rows[i]["first_team_fours"]
                            </td>
                            <td>
                                @Model.Rows[i]["first_team_maidens"]
                            </td>
                            <td>
                                @Model.Rows[i]["first_team_totalout"]
                            </td>
                            <td>
                                @Model.Rows[i]["first_team_wktstaken"]
                            </td>
                            <td>
                                @Model.Rows[i]["first_team_ballsbowled"]
                            </td>
                            <td>
                                @Model.Rows[i]["second_team_runsscored"]
                            </td>
                            <td>
                                @Model.Rows[i]["second_team_ballsfaced"]
                            </td>
                            <td>
                                @Model.Rows[i]["second_team_sixers"]
                            </td>
                            <td>
                                @Model.Rows[i]["second_team_fours"]
                            </td>
                            <td>
                                @Model.Rows[i]["second_team_maidens"]
                            </td>
                            <td>
                                @Model.Rows[i]["second_team_totalout"]
                            </td>
                            <td>
                                @Model.Rows[i]["second_team_wktstaken"]
                            </td>
                            <td>
                                @Model.Rows[i]["second_team_ballsbowled"]
                            </td>
                            
                            <td>
                                <a onclick="jQueryshowPopUp('@Url.Action("Edit", "Scorecard",new { id = @Model.Rows[i]["sc_id"]},Context.Request.Scheme)', 'Update Scorecard record')" class="btn btn-primary btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Edit</a>
                                <a onclick="jQueryshowPopUp('@Url.Action("Delete", "Scorecard",new { id = @Model.Rows[i]["sc_id"]},Context.Request.Scheme)', 'Delete Scorecard record')" class="btn btn-danger btn-sm text-light"><i class="far fa-trash-alt p-1 d-inline"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
