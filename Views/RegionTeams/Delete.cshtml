@model core.Models.RegionTeamsModel

@{
    ViewData["Title"] = "Delete region team record";
    Layout = null;
}

<h3 class="text-center">@ViewData["Title"]</h3>
<div>
    <div class="container">
        <div class="col-108 mx-auto">
            <h5 class="text-danger text-center">Are you sure you want to delete this?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.team_name)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.team_name)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.country_name)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.country_name)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.team_rank)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.team_rank)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.no_of_bowlers)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.no_of_bowlers)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.no_of_batsmans)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.no_of_batsmans)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.no_of_wins)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.no_of_wins)
                </dd>
                 <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.no_of_loses)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.no_of_loses)
                </dd>
                 <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.no_of_draws)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.no_of_draws)
                </dd>
                 <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.cap_id)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.cap_id)
                </dd>
                 <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.wk_id)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.wk_id)
                </dd>


            </dl>
            <form asp-action="Delete" asp-route-id="@Model.team_id" onsubmit="return ajaxPost(this);">
                <input type="hidden" asp-for="team_id" />

                <input type="submit" value="Delete" class="btn btn-danger btn-block" /><br />

            </form>
        </div>
    </div>
</div>
