@model System.Data.DataTable

<div class="table-responsive-lg " style="height: 500px; overflow-y:auto;">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped  table-sm" style="height:100px;">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Stadium Name
                        </th>
                        <th>
                            Place
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            Capacity
                        </th>

                        <th>
                            <a onclick="jQueryshowPopUp('@Url.Action("Add", "Stadium",null,Context.Request.Scheme)', 'Insert Stadium record')" class="btn btn-primary btn-sm text-light"><i class="fas fa-plus-circle p-1"></i>Create New</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Rows[i]["stad_id"]
                            </td>
                            <td>
                                @Model.Rows[i]["stad_name"]
                            </td>
                            <td>
                                @Model.Rows[i]["place"]
                            </td>
                            <td>
                                @Model.Rows[i]["country"]
                            </td>
                            <td>
                                @Model.Rows[i]["capacity"]
                            </td>

                            <td>
                                <a onclick="jQueryshowPopUp('@Url.Action("Edit", "Stadium",new { id = @Model.Rows[i]["stad_id"]},Context.Request.Scheme)', 'Update Stadium record')" class="btn btn-primary btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Edit</a>
                                <a onclick="jQueryshowPopUp('@Url.Action("Delete", "Stadium",new { id = @Model.Rows[i]["stad_id"]},Context.Request.Scheme)', 'Delete Stadium record')" class="btn btn-danger btn-sm text-light"><i class="far fa-trash-alt p-1 d-inline"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
