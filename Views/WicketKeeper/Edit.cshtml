@model core.Models.WicketKeeperModel

@{
    ViewData["Title"] = "Update wicket keeper record";
    Layout = null;
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="container">
        
        <form asp-action="Edit" asp-route-id="@Model.wk_id" onsubmit="return ajaxPost(this);" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="wk_id" />
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="wk_name" class="control-label"></label>
                    <input asp-for="wk_name" class="form-control" />
                    <span asp-validation-for="wk_name" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="wk_rank" class="control-label"></label>
                    <input asp-for="wk_rank" class="form-control" />
                    <span asp-validation-for="wk_rank" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="no_of_catches" class="control-label"></label>
                    <input asp-for="no_of_catches" class="form-control" />
                    <span asp-validation-for="no_of_catches" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="no_of_stumps" class="control-label"></label>
                    <input asp-for="no_of_stumps" class="form-control" />
                    <span asp-validation-for="no_of_stumps" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary btn-block" />
            </div>
        </form>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
