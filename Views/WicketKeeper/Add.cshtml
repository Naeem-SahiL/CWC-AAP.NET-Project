@model core.Models.WicketKeeperModel

@{
    ViewData["Title"] = "Insert record of wicket keeper";
    Layout = null;
}

<h3 class="text-center">@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="container">
        <form asp-action="Add" asp-route-id="@Model.wk_id" onsubmit="return ajaxPost(this);" autocomplete="off">
            <div class="row">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*<input type="hidden" asp-for="wk_id" />*@
                    <div class="row">
                            <div class="form-group col-6">
                                <label asp-for="wk_id" class="control-label"></label>
                                <input asp-for="wk_id" class="form-control" />
                                <span asp-validation-for="wk_id" class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="wk_name" class="control-label"></label>
                                <input asp-for="wk_name" class="form-control" />
                                <span asp-validation-for="wk_name" class="text-danger"></span>
                            </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="wk_rank" class="control-label"></label>
                            <input asp-for="wk_rank" class="form-control" />
                            <span asp-validation-for="wk_rank" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="no_of_catches" class="control-label"></label>
                            <input asp-for="no_of_catches" class="form-control" />
                            <span asp-validation-for="no_of_catches" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="no_of_stumps" class="control-label"></label>
                            <input asp-for="no_of_stumps" class="form-control" />
                            <span asp-validation-for="no_of_stumps" class="text-danger"></span>
                        </div>
                       
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary btn-block" />
                    </div>
                    </div>
                </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
