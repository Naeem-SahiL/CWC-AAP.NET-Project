@model System.Data.DataTable

<div class="table-responsive-lg " style="height: 500px; overflow-y:auto;">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped  table-sm" style="height:100px;">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Club Name
                        </th>
                        <th>
                            Country
                        </th>
                        
                        <th>
                            <a onclick="jQueryshowPopUp('@Url.Action("Create", "Club",null,Context.Request.Scheme)', 'Insert Club record')" class="btn btn-primary btn-sm text-light"><i class="fas fa-plus-circle p-1"></i>Create New</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                    <tr>
                        <td>
                            @Model.Rows[i]["club_id"]
                        </td>
                        <td>
                            @Model.Rows[i]["club_name"]
                        </td>
                        <td>
                            @Model.Rows[i]["country"]
                        </td>
                        
                        <td>
                            <a onclick="jQueryshowPopUp('@Url.Action("Edit", "Club",new { id = @Model.Rows[i]["club_id"]},Context.Request.Scheme)', 'Update Club record')" class="btn btn-primary btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Edit</a>
                            <a onclick="jQueryshowPopUp('@Url.Action("Delete", "Club",new { id = @Model.Rows[i]["club_id"]},Context.Request.Scheme)', 'Delete Club record')" class="btn btn-danger btn-sm text-light"><i class="far fa-trash-alt p-1 d-inline"></i>Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
