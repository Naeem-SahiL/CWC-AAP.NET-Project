@model List<core.Models.PlayerModel>

<div class="table-responsive-md " style=" overflow-x:auto;">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped  table-sm" >
                <thead>
                    <tr>
                        <th>
                            @Html.LabelFor(model => model[0].p_id)
                        </th>
                        <th>
                            @Html.LabelFor(model => model[0].first_name)
                        </th>
                        <th>
                            @Html.LabelFor(model => model[0].last_name)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].team_id)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].country)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].height)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].dob)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].debut_date)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].T_20s)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].ODIS)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].tests)
                        </th>
                        
                        <th>
                            <a onclick="jQueryshowPopUp('@Url.Action("Add", "Player",null,Context.Request.Scheme)', 'Insert player record')" class="btn btn-primary btn-sm text-light"><i class="fas fa-plus-circle p-1 d-inline"></i>Create_New</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(core.Models.PlayerModel player in Model)
                    {
                        <tr>
                            <td>
                               @player.p_id
                            </td>
                            <td>
                                @player.first_name
                            </td>
                            <td>
                                @player.last_name
                            </td>
                            <td>
                                @player.team_id
                            </td>
                            <td>
                                @player.country
                            </td>
                            <td>
                                @player.height
                            </td>
                            <td>
                                @player.dob
                            </td>
                            <td>
                                @player.debut_date
                            </td>
                            <td>
                                @if (player.T_20s != null)
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Player", "Int_T20",new { id = player.p_id},Context.Request.Scheme)', 'Player T20 record')" class="btn btn-info btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>@player.T_20s</a>
                                }
                                else
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Add", "Int_T20", new { id = player.p_id }, Context.Request.Scheme)', 'Add Player T20 record')" class="btn btn-success btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Add</a>
                                }

                            </td>
                            <td>
                                @if (player.ODIS != null)
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Player", "Int_ODI", new { id = player.p_id }, Context.Request.Scheme)', 'Player ODI record')" class="btn btn-info btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>@player.ODIS</a>
                                }
                                else
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Add", "Int_ODI", new { id = player.p_id }, Context.Request.Scheme)', 'Add Player ODI record')" class="btn btn-success btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Add</a>
                                }
                            </td>
                            <td>
                                @if (player.tests != null)
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Player", "Int_TEST",new { id = player.p_id},Context.Request.Scheme)', 'Player Test record')" class="btn btn-info btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>@player.tests</a>
                                }
                                else
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Add", "Int_TEST", new { id = player.p_id }, Context.Request.Scheme)', 'Add Player Test record')" class="btn btn-success btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Add</a>
                                }
                            </td>
                           
                            <td class="row">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Edit", "Player",new { id = player.p_id},Context.Request.Scheme)', 'Update player record')" class="btn btn-primary btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Edit</a>
                                    <a onclick="jQueryshowPopUp('@Url.Action("Delete", "Player",new { id = player.p_id},Context.Request.Scheme)', 'Delete player record')" class="btn btn-danger btn-sm d-inline text-light"><i class="far fa-trash-alt p-1 d-inline"></i>Delete</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
