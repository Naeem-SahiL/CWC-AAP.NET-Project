@model System.Data.DataTable

<div class="table-responsive-lg " style="height: 500px; overflow-y:auto;">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped  table-sm" style="height:100px;">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Refree Name
                        </th>
                        <th>
                            No of Macthes Refreed
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            <a onclick="jQueryshowPopUp('@Url.Action("Add", "Refrees",null,Context.Request.Scheme)', 'Insert refree record')" class="btn btn-primary btn-sm text-light"><i class="fas fa-plus-circle p-1"></i>Create New</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Rows[i]["refree_id"]
                            </td>
                            <td>
                                @Model.Rows[i]["refree_name"]
                            </td>
                            <td>
                                @Model.Rows[i]["refered_matches"]
                            </td>
                            <td>
                                @Model.Rows[i]["country"]
                            </td>
                            <td>
                                <a onclick="jQueryshowPopUp('@Url.Action("Edit", "Refrees",new { id = @Model.Rows[i]["refree_id"]},Context.Request.Scheme)', 'Update refree record')" class="btn btn-primary btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Edit</a>
                                @*<a asp-action="Edit" class="btn btn-outline-primary btn-sm" asp-route-id="@Model.Rows[i]["umpire_id"]"><i class="far fa-edit p-1 d-inline"></i>Edit</a>*@ |
                                <a onclick="jQueryshowPopUp('@Url.Action("Delete", "Refrees",new { id = @Model.Rows[i]["refree_id"]},Context.Request.Scheme)', 'Delete refree record')" class="btn btn-danger btn-sm text-light"><i class="far fa-trash-alt p-1 d-inline"></i>Delete</a>

                                @*<a asp-action="Delete" class="btn btn-outline-danger btn-sm" asp-route-id="@Model.Rows[i]["umpire_id"]"><i class="fas fa-trash-alt d-inline p-1"></i>Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
