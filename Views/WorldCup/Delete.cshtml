@model core.Models.WorldCupModel

@{
    ViewData["Title"] = "Delete world cup record";
    Layout = null;
}

<h3 class="text-center">@ViewData["Title"]</h3>
<div>
    <div class="container">
        <div class="col-108 mx-auto">
            <h5 class="text-danger text-center">Are you sure you want to delete this?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.no_of_teams)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.no_of_teams)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.place)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.place)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Worldcup_year)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Worldcup_year)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.format_of_wc)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.format_of_wc)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.winnerteam)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.winnerteam)
                </dd>

            </dl>
            <form asp-action="Delete" asp-route-id="@Model.worldcup_id" onsubmit="return ajaxPost(this);">
                <input type="hidden" asp-for="worldcup_id" />

                <input type="submit" value="Delete" class="btn btn-danger btn-block" /><br />

            </form>
        </div>
    </div>
</div>
