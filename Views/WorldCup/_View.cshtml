@model List<core.Models.WorldCupModel>

<div class="table-responsive-lg " style="height: 500px; overflow-y:auto;">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped  table-sm" style="height:100px;">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(Model => Model[0].worldcup_id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model[0].no_of_teams)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model[0].place)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model[0].Worldcup_year)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model[0].format_of_wc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model[0].winnerteam)
                        </th>

                        <th>
                            <a onclick="jQueryshowPopUp('@Url.Action("Create", "WorldCup",null,Context.Request.Scheme)', 'Insert WorldCup record')" class="btn btn-primary btn-sm text-light"><i class="fas fa-plus-circle p-1"></i>Create New</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model[i].worldcup_id
                            </td>
                            <td>
                                @Model[i].no_of_teams
                            </td>
                            <td>
                                @Model[i].place
                            </td>
                            <td>
                                @Model[i].Worldcup_year
                            </td>
                            <td>
                                @Model[i].format_of_wc
                            </td>
                             <td>
                                @Model[i].winnerteam
                            </td>

                            <td class="row">
                                <a onclick="jQueryshowPopUp('@Url.Action("Edit", "WorldCup",new { id = @Model[i].worldcup_id},Context.Request.Scheme)', 'Update WorldCup record')" class="btn btn-primary btn-sm text-light col"><i class="far fa-edit p-1 d-inline"></i>Edit</a>
                                <a onclick="jQueryshowPopUp('@Url.Action("Delete", "WorldCup",new { id = @Model[i].worldcup_id},Context.Request.Scheme)', 'Delete WorldCup record')" class="btn btn-danger btn-sm text-light col"><i class="far fa-trash-alt p-1 d-inline"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
