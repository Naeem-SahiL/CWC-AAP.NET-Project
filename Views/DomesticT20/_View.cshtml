                            <td>
                                @Model.Rows[i]["T_20_bat_rank"]
                            </td>
                            <td>
                                @Model.Rows[i]["fifties"]
                            </td>
                            <td>
                                @Model.Rows[i]["style"]
                            </td>
                            <td>
                                @Model.Rows[i]["runs"]
                            </td>
                            <td>
                                @Model.Rows[i]["hundreds"]
                            </td>
                            <td>
                                @Model.Rows[i]["fours"]
                            </td>
                            <td>
                                @Model.Rows[i]["sixes"]
                            </td>
                            <td>
                                @Model.Rows[i]["average"]
                            </td>
                            <td>
                                @Model.Rows[i]["T_20_bow_rank"]
                            </td>
                            <td>
                                @Model.Rows[i]["best_figure"]
                            </td>
                            <td>
                                @Model.Rows[i]["runs_conceded"]
                            </td>
                            <td>
                                @Model.Rows[i]["wickets"]
                            </td>
                            <td>
                                @Model.Rows[i]["fiveWick"]
                            </td>
                            <td>
                                @Model.Rows[i]["econymy"]
                            </td>
                            <td>
                                @Model.Rows[i]["team_id"]
                            </td>

                            <td>
                                <a onclick="jQueryshowPopUp('@Url.Action("Edit", "DomesticT20",new { id = @Model.Rows[i]["domestic_id"]},Context.Request.Scheme)', 'Update domestic T20 record')" class="btn btn-primary btn-sm d-inline text-light"><i class="far fa-edit p-1 d-inline"></i>Edit</a>
                                <a onclick="jQueryshowPopUp('@Url.Action("Delete", "DomesticT20",new { id = @Model.Rows[i]["domestic_id"]},Context.Request.Scheme)', 'Delete domestic T20 record')" class="btn btn-danger btn-sm d-inline text-light"><i class="far fa-trash-alt p-1 d-inline"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
