@model System.Data.DataTable

<div class="table-responsive-md " style=" overflow-x:auto;">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped  table-sm" >
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Batting_Rank
                        </th>
                        <th>
                            Fifties
                        </th>
                        <th>
                            Stlye
                        </th>
                        <th>
                            Runs
                        </th>
                        <th>
                            Centuries
                        </th>
                        <th>
                            Fours
                        </th>
                        <th>
                            Sixes
                        </th>
                        <th>
                            Average
                        </th>
                        <th>
                            Bowlig_Rank
                        </th>
                        <th>
                            Best_Figure
                        </th>
                        <th>
                            Runs_Conceded
                        </th>
                        <th>
                            Wickets
                        </th>
                        <th>
                            FiveWick
                        </th>
                        <th>
                            Economy
                        </th>
                        <th>
                            Team id
                        </th>
                        <th>
                            <a onclick="jQueryshowPopUp('@Url.Action("Add", "DomesticT20",null,Context.Request.Scheme)', 'Insert domestic T20 record')" class="btn btn-primary btn-sm text-light"><i class="fas fa-plus-circle p-1 d-inline"></i>Create_New</a>
