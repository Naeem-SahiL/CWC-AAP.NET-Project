@model core.Models.Played_for_WorldCupModel

@{
    ViewData["Title"] = "Delete Player world cup record record";
    Layout = null;
}

<h3 class="text-center">@ViewData["Title"]</h3>
<div>
    <div class="container">
        <div class="col-108 mx-auto">
            <h5 class="text-danger text-center">Are you sure you want to delete this?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.player_name)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.player_name)
                </dd>

                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.worldcup_name)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.worldcup_name)
                </dd>

                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.pw_id)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.pw_id)
                </dd>

               

                
            </dl>
            <form asp-action="Delete" asp-route-id="@Model.player_id" onsubmit="return ajaxPost(this);">
                <input type="hidden" asp-for="player_id" />

                <input type="submit" value="Delete" class="btn btn-danger btn-block" /><br />

            </form>
        </div>
    </div>
</div>
