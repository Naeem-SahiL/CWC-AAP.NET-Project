@model List<core.Models.Played_for_clubModel>

<div class="table-responsive-md " style=" overflow-x:auto;">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped  table-sm" >
                <thead>
                    <tr>
                        <th>
                            @Html.LabelFor(model => model[0].player_id)
                        </th>
                        <th>
                            @Html.LabelFor(model => model[0].player_name)
                        </th>
                        <th>
                            @Html.LabelFor(model => model[0].club_id)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].club_name)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].club_ODI)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].club_T_20_id)
                        </th>
                         <th>
                            @Html.LabelFor(model => model[0].club_test_id)
                        </th>

                        <th>
                            <a onclick="jQueryshowPopUp('@Url.Action("Add", "PlayedForClubs",null,Context.Request.Scheme)', 'Insert player club record')" class="btn btn-primary btn-sm text-light"><i class="fas fa-plus-circle p-1 d-inline"></i>Create_New</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(core.Models.Played_for_clubModel player in Model)
                    {
                        <tr>
                            <td>
                               @player.player_id
                            </td>
                            <td>
                                @player.player_name
                            </td>
                            <td>
                                @player.club_id
                            </td>
                            <td>
                                @player.club_name
                            </td>
                            <td>
                                @if (player.club_ODI != null)
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Player", "ClubODI",new { id = player.club_ODI},Context.Request.Scheme)', 'Player club ODI record')" class="btn btn-info btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>View</a>
                                }
                                else
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Add", "ClubODI", null, Context.Request.Scheme)', 'Add Player club ODI record')" class="btn btn-success btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Add</a>
                                }
                               
                            </td>
                            <td>
                                @if (player.club_T_20_id != null)
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Player", "ClubT20",new { id = player.club_T_20_id},Context.Request.Scheme)', 'Player club T20 record')" class="btn btn-info btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>View</a>
                                }
                                else
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Add", "ClubT20", null, Context.Request.Scheme)', 'Add Player club T20 record')" class="btn btn-success btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Add</a>
                                }
                               
                            </td>
                            <td>
                                
                                @if (player.club_test_id != null)
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Player", "ClubTest",new { id = player.club_test_id}, Context.Request.Scheme)', 'Player club test record')" class="btn btn-info btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>View</a>
                                }
                                else
                                {
                                    <a onclick="jQueryshowPopUp('@Url.Action("Add", "ClubTest", null, Context.Request.Scheme)', 'Add Player club test record')" class="btn btn-success btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Add</a>
                                }
                            </td>
                            
                            
                            <td class="row">
                                <a onclick="jQueryshowPopUp('@Url.Action("Edit", "PlayedForClubs",new { id = player.player_id},Context.Request.Scheme)', 'Update player club record')" class="btn btn-primary btn-sm text-light"><i class="far fa-edit p-1 d-inline"></i>Edit</a>
                                <a onclick="jQueryshowPopUp('@Url.Action("Delete", "PlayedForClubs",new { id = player.player_id},Context.Request.Scheme)', 'Delete player club record')" class="btn btn-danger btn-sm d-inline text-light"><i class="far fa-trash-alt p-1 d-inline"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
