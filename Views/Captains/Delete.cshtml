@model core.Models.CaptainModel

@{
    ViewData["Title"] = "Delete captain record";
    Layout = null;
}

<h3 class="text-center">@ViewData["Title"]</h3>
<div>
    <div class="container">
        <div class="col-108 mx-auto">
            <h5 class="text-danger text-center">Are you sure you want to delete this?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.cap_name)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.cap_name)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.years_of_captaincy)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.years_of_captaincy)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.total_wins)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.total_wins)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.total_loses)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.total_loses)
                </dd>
            </dl>
            <form asp-action="Delete" asp-route-id="@Model.cap_id" onsubmit="return ajaxPost(this);">
                <input type="hidden" asp-for="cap_id" />

                <input type="submit" value="Delete" class="btn btn-danger btn-block" /><br />

            </form>
        </div>
    </div>
</div>
